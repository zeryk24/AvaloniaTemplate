<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AvaloniaTemplate.Presentation.Second"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaTemplate.Presentation.Second.SecondView"
			 x:DataType="vm:SecondViewModel">
	<Grid>
		<StackPanel Width="600" VerticalAlignment="Center">
			<Border CornerRadius="10" Background="Green" Height="100" Margin="10">
				<Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*,*">

					<Panel Grid.ColumnSpan="3" Margin="10" VerticalAlignment="Center">
						<TextBlock TextWrapping="Wrap"
							Text="{Binding Recipe.Name}"/>
					</Panel>

					<TextBlock Text="{Binding Recipe.GroundsGrams}" Grid.Row="1" Grid.Column="1" Margin="10"/>
					<TextBlock Text="{Binding Recipe.WaterGrams, StringFormat={}{0}g}" Grid.Row="1" Margin="10"/>


					<TextBlock Text="{Binding Recipe.GroundSize}" Grid.Row="1" Grid.Column="2" Margin="10"/>
					<TextBlock Text="{Binding Recipe.Time, StringFormat=mm\\:ss}" Grid.Row="1" Grid.Column="3" Margin="10"/>
				</Grid>
			</Border>
			<Button Content="Go back" HorizontalAlignment="Center" Command="{Binding GoBack}" Margin="10"/>
		</StackPanel>
		
	</Grid>
			
</UserControl>
