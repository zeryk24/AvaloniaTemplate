<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:AvaloniaTemplate.Presentation.Home"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaTemplate.Presentation.Home.HomeView"
			 x:DataType="vm:HomeViewModel">
	<Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<TextBlock Text="Welcome to simple avalonia template, this is home page!"/>
			<Button Content="Go to second page" HorizontalAlignment="Center" Command="{Binding GoToSecond}"/>
		</StackPanel>
	</Grid>
</UserControl>
